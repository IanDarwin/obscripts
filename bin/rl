#!/bin/ksh

# rl - reload various system servers' data
# $Id$

PROGNAME=$0; export PROGNAME

function reload_by_pid {
	serv=$1
	if [ -f /var/run/$serv?pid ]; then
		kill -HUP `sed -e 1q /var/run/$serv.pid`
	else
		echo >&2 "$PROGNAME: $serv.pid not found in /var/run.d, not running?"
	fi
}

function do_help {
	echo "$0 reloads servers. Services available include:"
	echo "pf `cd /var/run; ls *.pid|sed 's/\.pid//g' `"
}

function do_arp {
	ETHERS=/etc/ethers
	# format is: 08:00:20:04:e3:f0       dartboard
	cat ${ETHERS} | while read ether_addr hostname
	do
		arp -s ${hostname} ${ether_addr} temp
	done
}

USAGE="$0 [-i][-v] service"

function usage {		# give usage message, and exit
	echo "Usage: $USAGE" 2>&1
	exit 1
}

while getopts "hiv" opt 
do 
 	 case "$opt" in 
		h)	do_help
			exit
			;;
		i)	INTERACT=YES;;
		v)	VERBOSE=-v;;
		*)	usage;;
	esac
done
shift $(expr $OPTIND - 1)		 # leave just filenames

for serv
do
	case $serv in
	help)
		do_help
		exit
		;;
	arp)
		do_arp
		;;
	asterisk)
		/etc/rc.d/asterisk restart
		;;
	cups*)
		/etc/rc.d/cupsd restart
		;;
	dhcpd)
		/etc/rc.d/dhcpd restart
		;;
	eth0)			# only exists on Linux
		dhclient eth0
		;;
	ipsec)
		kill -HUP `cat /var/run/isakmpd.pid`
		ipsecctl -f /etc/ipsec.conf
		;;
	named|bind)
		#rndc reload
		rndc stop
		named -t /var/named

		sleep 1
		echo "Now please check this logfile..."
		watchlog -n25 daemon
		;;
	nagios)
		# N.B. Invoke in check mode before pkilling old and starting new.
		sudo -u _nagios nagios -v /etc/nagios/nagios.cfg && /etc/rc.d/nagios restart
		;;
	http*|apache)
		if [ -x /usr/sbin/apachectl ]; then
			apachectl restart
		else
			if [ -f /var/www/logs/httpd.pid ]; then
				kill -HUP `cat /var/www/logs/httpd.pid`
			else
				echo "Can't find either apachectl or httpd.pid, sorry"
			fi;
		fi
		;;
	nfs)
		reload_by_pid mountd
		;;
	openvpn|vpn)
		pkill openvpn
		case $(hostname) in
		www.darwinsys.com) grep "/usr/local/sbin/openvpn --" /etc/rc.local | sh -x;;
		*) exec rl tun0;;
		esac
		;;
	postgres*)
		/etc/rc.d/postgres reload
		;;
	pf)
		pfctl -e /etc/pf.conf 2>/dev/null
		pfctl -f /etc/pf.conf
		;;
	sendmail)
		reload_by_pid sendmail
		;;
	smtpd)
		pkill smtpd
		/usr/sbin/smtpd
		;;
	spam*)
		# reload spamd
		/usr/libexec/spamd-setup -d -D
		;;
	squid)
		/etc/rc.d/squid restart
		;;
	tomcat)
		unset CLASSPATH
		/etc/rc.d/tomcat stop
		mv ${CATALINA_HOME}/logs/catalina.{out,bak} 2>/dev/null
		/etc/rc.d/tomcat start
		;;
	*[012])			# must be near last: rl0, sis0, ath0, etc.
		sh /etc/netstart ${serv}
		;;
	*)
		# must be a regular daemon
		reload_by_pid $serv
		;;
	esac
done
